<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <com.logitrips.userapp.util.CircleImageView
        android:id="@+id/chat_det_driver_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/menu_account"
        app:border_color="@android:color/transparent"
        app:border_width="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/chat_det_driver_img"
        android:background="@drawable/chat_driver"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_det_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:singleLine="true"
            android:text="dasdasd"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/chat_det_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="7dp"
            android:singleLine="true"
            android:text="dasdas"
            android:textColor="@color/chat_text_orange"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>